{{>layouts/header}}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">상품 관리</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/index">홈</a></li>
                <li class="breadcrumb-item active">상품 관리</li>
                <li class="breadcrumb-item active">상위 상품 등록</li>
            </ol>
            <div class="card mb-4">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="inputTitle"> 상품 명 </label>
                                    <small class="text-muted"><sup  style="color:red;">*</sup></small>
                                    <input type="text" class="form-control " id="inputTitle" placeholder="제목을 입력해 주세요" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputUseYn">노출 여부</label>
                                <small class="text-muted"><sup  style="color:red;">*</sup></small>
                                <fieldset class="form-control">
                                    <div class="form-group">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="inputUseYn" id="useY" value="true" checked>
                                            <label class="form-check-label" for="useY">Y</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="inputUseYn" id="useN" value="false">
                                            <label class="form-check-label" for="useN">N</label>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="inputCategory"> 상품 카테고리 </label>
                                <select class="form-control" name="inputCategory" id="inputCategory" required>
                                    <option value="" disabled selected>카테고리를 선택해 주세요</option>
                                    {{#categories}}
                                        <option value={{productCategorySeq}}>{{productCategoryValue}}</option>
                                    {{/categories}}
                                </select>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="inputPrice"> 상품 가격 </label>
                                    <small class="text-muted"><sup  style="color:red;">*</sup></small>
                                    <input type="number" class="form-control " id="inputPrice" placeholder="상품 가격을 입력해 주세요." required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="inputReleaseDate"> 상품 출시 일 </label>
                                    <small class="text-muted"><sup  style="color:red;">*</sup></small>
                                    <input type="date" class="form-control " id="inputReleaseDate" placeholder="상품 출시일을 입력해 주세요." required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="inputStock"> 상품 재고 </label>
                                    <small class="text-muted"><sup  style="color:red;">*</sup></small>
                                    <input type="number" class="form-control " id="inputStock" placeholder="재고 수량을 입력해 주세요.(기본값: 0)." value="0" required>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="form-group mb-3">
                                <label for="inputContent"> 상품 본문 </label>
                                <textarea class="form-control" id="inputContent" rows="13"></textarea>
                            </div>
                        </div>
                        <!--표지 이미지 업로드 START-->
                        <div class="row">
                            <!--file upload test-->
                            <div class="col-md-6">
                                <label class="form-label" for="inputImage">섬네일 이미지</label>
                                <input type="file" class="form-control" id="inputFile" name="inputFile" >
                                <input type="hidden" id="uploadValid" value="N">
                                <input type="hidden" id="productThumbnailImage" >
                                <input type="hidden" id="productThumbnailImageFileName" >
                            </div>
                            <div class="col-md-3" style="padding-top:32px;" id="imgControl">
                                <button class="btn btn-dark" id="uploadBtn" style="display: block">이미지 업로드</button>
                                <!--<button class="btn btn-success" id="defaultSuccess" style="display: none;" disabled>업로드 완료</button>-->
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" id="productInsertBtn"> 등록 </button>
                        <button class="btn btn-dark" onclick="history.back();"> 취소 </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script type="text/javascript">
        /*Ready Start*/
        $(function (){
            /*CKeditor - 상품 상세*/
            CKEDITOR.replace("inputContent", {
                filebrowserUploadUrl: '/file/ckeditor/image/upload',
                filebrowserUploadMethod: 'form',
                font_names:
                        '맑은 고딕/Malgun Gothic;굴림/Gulim;돋움/Dotum;바탕/Batang;궁서/Gungsuh;Arial/Arial;Comic Sans MS/Comic Sans MS;Courier New/Courier New;Georgia/Georgia;Lucida Sans Unicode/Lucida Sans Unicode;Tahoma/Tahoma;Times New Roman/Times New Roman;MS Mincho/MS Mincho;Trebuchet MS/Trebuchet MS;Verdana/Verdana',
                font_defaultLabel: '맑은 고딕/Malgun Gothic',
                fontSize_defaultLabel: '12',
                skin: 'office2013',
                language: 'ko',
                height: '350px'
            });
        });
        /*Ready End*/
    </script>
    <script src="/js/ckeditor/ckeditor.js"></script>
    <script src="/js/product.js"></script>
{{>layouts/footer}}