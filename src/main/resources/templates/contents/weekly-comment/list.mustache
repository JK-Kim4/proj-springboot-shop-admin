{{>layouts/header}}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">주간 논평 관리</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/index">홈</a></li>
                <li class="breadcrumb-item active">주간 논평 목록</li>
            </ol>
            <div class="card mb-4">
                <div class="card">
                    <div class="card-header">
                        <button class="btn btn-primary" onclick="location.href='/signUp'"> 주간논평 등록 </button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <th class="col-md-1"> 번호 </th>
                                    <th class="col-md-1"> 제목 </th>
                                    <th class="col-md-1"> 노출 여부 </th>
                                    <th class="col-md-1"> 등록일 </th>
                                    <th class="col-md-1"> 수정일 </th>
                                    <th class="col-md-1"> 조회수 </th>
                                </thead>
                                <tbody>
                                {{#weeklyComments}}
                                    <tr>
                                        {{#weeklySeq}}<td class="col-md-1">{{weeklySeq}}</td>{{/weeklySeq}}
                                        {{^weeklySeq}}<td class="col-md-1"> - </td>{{/weeklySeq}}

                                        {{#weeklyTitle}}<td class="col-md-1">{{weeklyTitle}}</td>{{/weeklyTitle}}
                                        {{^weeklyTitle}}<td class="col-md-1"> - </td>{{/weeklyTitle}}

                                        {{#useYn}}<td class="col-md-1">{{useYn}}</td>{{/useYn}}
                                        {{^useYn}}<td class="col-md-1"> - </td>{{/useYn}}

                                        {{#appendDate}}<td class="col-md-1">{{appendDate}}</td>{{/appendDate}}
                                        {{^appendDate}}<td class="col-md-1"> - </td>{{/appendDate}}

                                        {{#updateDate}}<td class="col-md-1">{{updateDate}}</td>{{/updateDate}}
                                        {{^updateDate}}<td class="col-md-1"> - </td>{{/updateDate}}

                                        {{#viewCount}}<td class="col-md-1">{{viewCount}}</td>{{/viewCount}}
                                        {{^viewCount}}<td class="col-md-1"> 0 </td>{{/viewCount}}
                                    </tr>
                                {{/weeklyComments}}
                                {{^weeklyComments}}
                                    <tr>
                                        <td colspan="7"> 등록된 주간논평이 없습니다. </td>
                                    </tr>
                                {{/weeklyComments}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {{>layouts/footer}}