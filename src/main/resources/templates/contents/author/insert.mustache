{{>layouts/header}}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">저자 관리</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/index">홈</a></li>
                <li class="breadcrumb-item active">저자 관리</li>
                <li class="breadcrumb-item active">저자 등록</li>
            </ol>
            <div class="card mb-4">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group mb-3">
                                    <label for="inputKrNm"> 한글 이름 </label>
                                    <small class="text-muted"><sup  style="color:red;">*</sup></small>
                                    <input type="text" class="form-control " id="inputKrNm" placeholder="한글 이름" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="helpInputTop">노출 여부</label>
                                    <small class="text-muted"><sup  style="color:red;">*</sup></small>
                                    <fieldset class="form-control">
                                        <div class="form-group">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inputYn" value="true" checked>
                                                <label class="form-check-label" for="inputYn">Y</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inputYn" value="false">
                                                <label class="form-check-label" for="inputYn">N</label>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="inputContent">저자 소개</label>
                                    <textarea class="form-control" id="inputContent" rows="13"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!--file upload test-->
                            <div class="col-md-6">
                                <label class="form-label" for="fileUploadTest">저자 이미지</label>
                                <input type="file" class="form-control" id="inputFile" name="inputFile" >
                                <input type="hidden" id="uploadValid" value="N">
                                <input type="hidden" id="authorThumbnailImage" >
                                <input type="hidden" id="authorThumbnailImageFileName" >
                            </div>
                            <div class="col-md-3" style="padding-top:32px;" id="imgControl">
                                <button class="btn btn-danger" id="uploadBtn" style="display: block">업로드</button>
                                <!--<button class="btn btn-success" id="defaultSuccess" style="display: none;" disabled>업로드 완료</button>-->
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" id="authorInsertBtn"> 등록 </button>
                        <button class="btn btn-dark" onclick="history.back();"> 취소 </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="/js/ckeditor/ckeditor.js"></script>
    <script src="/js/author.js"></script>
{{>layouts/footer}}